<h1>Editing trade</h1>

<div class="row">
  <div class="col-md-12">
    <%= render 'form' %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div id="my-cards">
      <h2>Mine</h2>
      <%= render 'traded_cards', rows: @trade.my_side %>
    </div>
  </div>
  <div class="col-md-6">
    <div id="their-cards">
      <h2>Theirs</h2>
      <%= render 'traded_cards', rows: @trade.their_side %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h3>Add Cards</h3>
    <%= form_tag(create_or_update_traded_cards_path, class: 'form-inline', remote: true) do %>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= label_tag('new-traded-card', 'Card', class: 'sr-only') %>
            <%= text_field_tag('new-traded-card', nil, class: 'typeahead form-control', placeholder: 'Card Name') %>
          </div>
          <div class="checkbox">
            <label>
              <%= check_box_tag('traded_card[foil]') %> Foil
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= check_box_tag('traded_card[signed]') %> Signed
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= check_box_tag('traded_card[altered]') %> Altered
            </label>
          </div>
          <%= hidden_field_tag('traded_card[printing_id]') %>
          <%= hidden_field_tag('traded_card[trade_id]', @trade.id) %>
          <%= hidden_field_tag('traded_card[number]') %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= submit_tag 'Add Mine', class: 'btn btn-primary', name: 'mine', id: 'add-my-card' %>
          <%= submit_tag 'Add Theirs', class: 'btn btn-primary', name: 'theirs', id: 'add-their-card' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h3>Add Money</h3>
    <%= form_tag(create_or_update_payments_path, class: 'form-inline', remote: true) do %>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= number_field_tag('payment[amount]', placeholder: 'Amount') %>
          </div>
        </div>
      </div>
      <%= hidden_field_tag('payment[trade_id]', @trade.id) %>
      <div class="row">
        <div class="col-md-12">
          <%= submit_tag 'Add Mine', class: 'btn btn-primary', name: 'mine' %>
          <%= submit_tag 'Add Theirs', class: 'btn btn-primary', name: 'theirs' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Show', @trade %> |
    <%= link_to 'Back', trades_path %>
  </div>
</div>
