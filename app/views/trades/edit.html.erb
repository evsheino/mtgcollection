<h1>Editing trade</h1>

<%= render 'form' %>

<ul id="traded-card">
  <% @trade.traded_cards.each do |card| %>
    <%= render traded_card %>
  <% end %>
</ul>

<%= form_tag('/data/add_traded_card', remote: true) do %>
  <%= text_field_tag('new-traded-card', nil, class: 'typeahead') %>
  <%= hidden_field_tag('card-id') %>
  <%= submit_tag 'Add', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Show', @trade %> |
<%= link_to 'Back', trades_path %>
