<%= form_for(@trade) do |f| %>
  <% if @trade.errors.any? %>
    <div class="row">
      <div class="col-md-12">
        <div id="error_explanation">
          <h2><%= pluralize(@trade.errors.count, "error") %> prohibited this trade from being saved:</h2>

          <ul>
          <% @trade.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :user_id %><br>
        <p class="form-control-static"><%= @trade.user %></p>
        <%= f.text_field :user_id, hidden: true %>
      </div>
      <div class="form-group">
        <%= f.label :partner %><br>
        <%= f.text_field :partner, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :date %><br>
        <%= f.text_field :date, 'data-behaviour' => 'datepicker', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :note %><br>
        <%= f.text_area :note, class: "date-select form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
